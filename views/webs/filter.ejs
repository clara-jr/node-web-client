<div class="container filter">
	<form action="/webs/<%=webId%>/<%=JSON.parse(filter).id%>" method="post" class="form-horizontal">
		<p>Update the filter:</p>
		<div class="form-group">
		    <label class="control-label col-sm-2" for="track">Pattern:</label>
		    <div class="col-sm-10">
		      <input class="form-control" type="text" name="pattern" id="pattern" value="<%=JSON.parse(filter).pattern%>"/>
		    </div>
		</div>
		<div class="form-group">
		    <label class="control-label col-sm-2" for="img">Type:</label>
		    <div class="col-sm-10"> 
		      <input class="form-control" type="text" name="type" id="type" value="<%=JSON.parse(filter).type%>"/>
		    </div>
		</div>
	  	<button class="btn btn-info" type="submit">Update</button>
	</form>
</div>