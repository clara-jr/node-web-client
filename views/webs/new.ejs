<div class="container">
	<form action="/new" method="post" class="form-horizontal">
		<p>Add a new web:</p>
		<div class="form-group">
		    <label class="control-label col-sm-2" for="track">Url:</label>
		    <div class="col-sm-10">
		      <input class="form-control" type="text" name="url" id="url"/>
		      <%if (typeof alert !== 'undefined') {%>
		      	<%=alert%>
		      <%}%>
		    </div>
		</div>
		<div class="form-group">
		    <label class="control-label col-sm-2" for="img">Genre:</label>
		    <div class="col-sm-10"> 
		      <input class="form-control" type="text" name="genre" id="genre"/>
		    </div>
		</div>
	  	<button class="btn btn-info" type="submit">Add</button>
	</form>
</div>