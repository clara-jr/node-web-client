<div class="container web">
	<a class="web" href='/webs/<%=JSON.parse(web)._id%>'>
	<%=JSON.parse(web).url%></a>
	<%=JSON.parse(web).genre%>
	<%if (JSON.parse(web).filters.length > 0) {%>
		</br>
		<b>Filters:</b>
		<%for (var f in JSON.parse(web).filters) {%>
			</br>
			Pattern: <%=JSON.parse(web).filters[f].pattern%> Type: <%=JSON.parse(web).filters[f].type%>
			<a style="font-size:12px; padding: 2px 8px;" href="/webs/<%=JSON.parse(web)._id%>/<%=JSON.parse(web).filters[f]._id%>" class="btn btn-info" type="submit">Update filter</a>
		<%}%>
	<%}%>
	<form method="post" action="/webs/<%=JSON.parse(web)._id%>?_method=put" class="form-horizontal">
		New Filter:</br></br>
		<div class="form-group">
		    <label class="control-label col-sm-2" for="pattern">Pattern:</label>
		    <div class="col-sm-10">
		      <input class="form-control" type="text" name="pattern" id="pattern"/>
		    </div>
		</div>
		<div class="form-group">
		    <label class="control-label col-sm-2" for="type">Type:</label>
		    <div class="col-sm-10"> 
		      <input class="form-control" type="text" name="filterType" id="filterType"/>
		    </div>
		</div>
	    <button style="font-size:12px; padding: 2px 8px; margin-top: 5px;" class="btn btn-info" type="submit">Add new filter</button>
	</form>
	<form method="post" action="/webs/<%=JSON.parse(web)._id%>?_method=delete">
	    <button class="btn btn-danger" type="submit" onClick="return confirm('Delete: <%=JSON.parse(web).url%>. Are you sure? ');">Delete web</button>
	</form>
</div>