<div class="container">
	<%if(session.user){%>
		<h1><%= title %> <%= session.user.id %></h1>
		<br>
		<p>In this website you can create filters for some webs or look up the existing ones.</p>
	<%} else {%>
		<form action="/login" method="post" class="form-horizontal" role="form">
		    <p>Login:</p>
		    <div class="form-group">
		      <label class="control-label col-sm-2" for="login">Username:</label>
		      <div class="col-sm-10">
		        <input type="text" required class="form-control" id="login" name="login" size="30" placeholder="Enter username">
		      </div>
		    </div>
		    <div class="form-group">
		      <label class="control-label col-sm-2" for="password">Password:</label>
		      <div class="col-sm-10"> 
		        <input type="password" required class="form-control" id="password" name="password" size="30" placeholder="Enter password">
		      </div>
		    </div>
		    <button class="mybtn btn btn-info" type="submit">Login</button>
		</form>
		<%if(errors.message){%>
		    <div class="alert alert-danger" role="alert">Error: <%=errors.message%></div>
		<%}%>
	<%}%>
</div>